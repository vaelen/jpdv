#!/bin/bash

base_classpath="lib/clojure.jar:lib/clojure-contrib.jar:lib/jline.jar:src/"

if [ "x$CLASSPATH" = "x" ] ; then
	extra_classpath=""
else
	extra_classpath=":$CLASSPATH"
fi

while true ; do
	case "$1" in
		-cp | -classpath)
			extra_classpath=":$2"
			shift 2 ;;
		--)
			shift
			break ;;
		*)
			break ;;
	esac
done

exec java -cp "${base_classpath}${extra_classpath}" jline.ConsoleRunner clojure.lang.Repl "$@"
